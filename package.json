{
  "name": "ez-forum",
  "version": "1.0.0",
  "description": "一个基于Fastify、MongoDB和TypeScript的论坛后端服务",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "tsx src/index.ts",
    "dev": "tsx -r dotenv/config src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t ez-forum .",
    "docker:run": "docker run -p 3009:3009 ez-forum",
    "docs:serve": "./scripts/serve-docs.sh",
    "docs:export": "./scripts/export-docs.sh"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "forum",
    "fastify",
    "mongodb",
    "prisma",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/env": "^5.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^6.4.1",
    "@types/uuid": "^10.0.0",
    "ali-oss": "^6.22.0",
    "cos-nodejs-sdk-v5": "^2.14.6",
    "dotenv": "^17.0.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/ali-oss": "^6.16.11",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "9.32.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
